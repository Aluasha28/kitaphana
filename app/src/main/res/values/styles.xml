        <item name="colorSecondary">@color/orange500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="Widget.TravelBlog.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.TravelBlog.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
